	<canvas class="myCanvas" style="z-index:1;position:absolute;width:1500px;height:950px;bottom:-150px;">
		<p>.</p>
	</canvas>

	<script>
		const canvas = document.querySelector('.myCanvas');
		const width = canvas.width = window.innerWidth;
		const height = canvas.height = window.innerHeight;
		const ctx = canvas.getContext('2d');

		ctx.fillStyle = '#414149';
		ctx.fillRect(0, 0, width, height);


		ctx.translate(width / 2, height / 2);

		let image = new Image();
		image.src = 'walk-covid.png';
		image.onload = draw;


		let sprite = 0;
		let posX = 0;

		function draw() {
			ctx.fillRect(-(width / 2), -(height / 2), width, height);
			ctx.drawImage(image, (sprite * 200), 0, 200, 148, 0 + posX, -74, 200, 148);
			//			ctx.drawImage(image, (sprite * 102), 0, 102, 148, 0 + posX, -74, 102, 148);
			//102 de base, puis 200 pour la guitare

			if (posX % 13 === 0) {
				if (sprite === 5) {
					sprite = 0;
				} else {
					sprite++;
				}
			}

			if (posX > width / 2) {
				newStartPos = -((width / 2) + 200);
				posX = Math.ceil(newStartPos);
				console.log(posX);
			} else {
				posX += 2;
			}

			window.requestAnimationFrame(draw);
		};

	</script>


